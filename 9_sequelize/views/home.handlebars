<div class="container">
    {{#each users}}
    <div class="item" href="/user/{{this.id}}">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/user/{{this.id}}" class="detalhes-btn">Ver detalhes</a>
            <a href="/user/edit/{{this.id}}" class="detalhes-btn">Editar</a>
            <form action="/api/user/delete/{{this.id}}" method="post">
                <input type="submit" value="Excluir" class="delete-btn">
            </form>
        </div>
    </div>
    {{/each}}
</div>
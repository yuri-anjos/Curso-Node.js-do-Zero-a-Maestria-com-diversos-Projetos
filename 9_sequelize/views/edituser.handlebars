<h1>Editando {{user.name}}</h1>
<form action="/api/user/edit" method="post" class="user-form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome: </label>
        <input type="text" name="name" id="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissão: </label>
        <input type="text" name="occupation" id="occupation" placeholder="Digite a profissão"
            value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" id="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter" id="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Salvar">
</form>

<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/api/address" method="post" class="address-form">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua: </label>
            <input type="text" name="street" id="street" placeholder="Digite o nome da rua">
        </div>
        <div class="form-control">
            <label for="number">Número: </label>
            <input type="text" name="number" id="number" placeholder="Digite o número">
        </div>
        <div class="form-control">
            <label for="city">Cidade: </label>
            <input type="text" name="city" id="city" placeholder="Digite o nome da cidade">
        </div>
        <input type="submit" value="Salvar">
    </form>
    <div class="address-list">
        {{#each user.Addresses}}
        <div>
            #{{this.id}} - {{this.street}}, {{this.number}} - {{this.city}}
            <form action="/api/address/delete" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="UserId" value="{{this.UserId }}">
                <input type="submit" value="Excluir">
            </form>
        </div>

        {{/each}}
    </div>
</div>